@model IEnumerable<Top_Rooftop_project.ModelVm.HouseOwnerVm>
@{
    int idNo = 1;
}

<a asp-action="CreateOrEdit" asp-controller="House">Input</a>

<table class="table table-bordered table-dark" id="HouseTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@idNo</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>
                    <a asp-action="CreateOrEdit" asp-controller="House" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delted" asp-controller="House" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are You Sure Delted this')">Delted</a>
                    <a asp-action="Details" asp-controller="House" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
            idNo++;
        }
    </tbody>
</table>


@section Scripts {
    <script>
        new DataTable('#HouseTable');
    </script>
}
