@model Top_Rooftop_project.ModelVm.UserVm
@{

}

<div class="container mt-3">
    <form asp-action="CreateOrEdit" asp-controller="User" method="post">
        <div class="form-group mt-3">
            <label asp-for="Email" class="mt-3">Enter Your Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group mt-3">
            <label asp-for="UserName" class="mt-3">Enter Your UserName</label>
            <input asp-for="UserName" class="form-control" placeholder="Enter UserName">
        </div>
        <div class="form-group mt-3">
            <label asp-for="Password" class="mt-3">Enter Your Password</label>
            <input asp-for="Password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            debugger;
            $('form').submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: response.message,
                                showConfiguratonButton: false,
                                timer: 1500
                            }).then(function () {
                                window.location.href = '@Url.Action("Index", "User")';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something went wrong!",
                            footer: '<a href="#">Why do I have this issue?</a>'
                        });
                    }
                });
            });
        });

    </script>
}