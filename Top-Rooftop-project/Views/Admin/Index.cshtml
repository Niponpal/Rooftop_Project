@model IEnumerable<Top_Rooftop_project.ModelVm.AdminVm>
@{

}


<a asp-action="CreateOrEdit" asp-controller="Admin" class="btn btn-dark">Input</a>

<table class="table table-bordered table-dark" id="AdminTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>
                    <a asp-action="CreateOrEdit" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delted" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are You Sure Delted this')">Delted</a>
                    <a asp-action="Details" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        new DataTable('#AdminTable');
    </script>
}
